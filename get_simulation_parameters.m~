sim.gamma   = 4258;                     % [Hz/G]
sim.TR      = G_t(end) * 10^-3;         % repetition time [s]
sim.Trf     = 0.0005;                   % [s] 
sim.T1      = 1;                        % [s]
sim.T2      = .1;                       % [s]
sim.dfreq   = 1;                        % [Hz]
sim.freq    = -250:sim.dfreq:250;       % [Hz]
sim.N       = N;                        % Number of rf pulses [-]
sim.alpha   = 35;                       % flip angle [degrees]
sim.Tpad    = (sim.TR - sim.Trf)/2;	% Sec.
sim.t       = [sim.Tpad sim.Trf sim.Tpad];
sim.Nprep   = nprep;
sim.pe      = ones(sim.N,1);
sim.rfphase = pi;
sim.theta   = lin_ph /180 * pi;
